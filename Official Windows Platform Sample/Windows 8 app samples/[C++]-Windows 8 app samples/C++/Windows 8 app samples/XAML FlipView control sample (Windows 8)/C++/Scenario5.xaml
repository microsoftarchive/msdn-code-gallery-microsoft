    <common:LayoutAwarePage.Resources>

        <ItemsPanelTemplate x:Key="VerticalPanel">
            <VirtualizingStackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>

        <ItemsPanelTemplate x:Key="HorizontalPanel">
