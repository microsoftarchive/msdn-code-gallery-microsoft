  <!-- Style for the button when a sync is not in progress -->
  <Style x:Key="StartButtonStyle" 
     BasedOn="{x:Null}" 
     TargetType="{x:Type Button}">
    <Setter Property="Command"
            Value="{Binding Source={x:Static Local:MsdnServiceProvider.ViewManager}, Path=MsdnCommands.MsdnStartSyncCommand}"/>
    <Setter Property="Background" Value="{StaticResource Sync}" />
	<Setter Property="ToolTip" Value="Sync the latest news" />
  </Style>

  <!-- Style for the button when a sync is in progress -->
  <Style x:Key="StopButtonStyle" 
       BasedOn="{x:Null}" 
       TargetType="{x:Type Button}">
    <Setter Property="Command" 
            Value="{Binding Source={x:Static Local:MsdnServiceProvider.ViewManager}, Path=MsdnCommands.MsdnStartSyncCommand}"/>
    <Setter Property="Background" Value="{StaticResource Cancel}" />
	<Setter Property="ToolTip" Value="Stop the current download" />
  </Style>

  <!-- Style for the button when an error has occured in a sync -->
  <Style x:Key="ErrorButtonStyle" 
       BasedOn="{x:Null}" 
       TargetType="{x:Type Button}">
    <Setter Property="Command"
        Value="{Binding Source={x:Static Local:MsdnServiceProvider.ViewManager}, Path=MsdnCommands.MsdnStartSyncCommand}"/>
    <Setter Property="Background" Value="{StaticResource Sync_Error}" />
    <Setter Property="ToolTip" Value="{Binding Source={x:Static SceReader:ServiceProvider.ViewManager}, Path=SyncErrorMessage}" />
  </Style>


  <!-- ControlTemplate for the sync control  -->
  <ControlTemplate x:Key="SyncControlTemplate"
                   TargetType="{x:Type Control}">
    <Grid HorizontalAlignment="Right">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Name="LeftColumn" Width="Auto"/>
        <ColumnDefinition Name="RightColumn" Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Bind the left column to the LastUpdated property on the SyncControl initially -->
      <ContentPresenter Name="LastUpdatedPresenter" 
                        Grid.Column="0" 
                        Visibility="Visible" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">
        <ContentPresenter.Content>
          <!-- Grid that displays the last updated date -->
          <Grid Margin="0,0,0,0">
            <Grid.Resources>
              <Local:DateTimeToStringConverter x:Key="DateTimeConverter" />
            </Grid.Resources>

            <Grid.RowDefinitions>
              <RowDefinition/>
              <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock FontFamily="HelveticaNeue Condensed" FontSize="{Binding Source={StaticResource LightSensorProvider}, Path=LuxValue, Converter={StaticResource LightLevelToFontSizeConverter}, ConverterParameter=14pt}" Foreground="{StaticResource Foreground_LastUpdatedText}"
                   VerticalAlignment="Bottom" 
                   Grid.Row="0" 
                   Text="Last Updated:"/>

            <TextBlock VerticalAlignment="Center" 
                       FontFamily="HelveticaNeue Condensed" FontSize="{Binding Source={StaticResource LightSensorProvider}, Path=LuxValue, Converter={StaticResource LightLevelToFontSizeConverter}, ConverterParameter=14pt}" Foreground="{StaticResource Foreground_LastUpdatedText}"
                       Grid.Row="1" 
                       Text="{Binding Source={x:Static SceReader:ServiceProvider.ViewManager}, Path=LastUpdated, Converter={StaticResource DateTimeConverter}}"
                       AutomationProperties.AutomationId="LastUpdate"
                       />

          </Grid>
        </ContentPresenter.Content>
      </ContentPresenter>

      <ContentPresenter Name="SyncProgressPresenter" 
                  Grid.Column="0" 
                  Visibility="Collapsed" 
                  Width="120" 
                  VerticalAlignment="Center">
        <ContentPresenter.Content>
          <!-- Progress bar displayed when a sync is in progress -->
          <ProgressBar Height="15" AutomationProperties.AutomationId="SyncProgress">
            <ProgressBar.Value>
              <Binding Mode="OneWay" Source="{x:Static SceReader:ServiceProvider.ViewManager}" Path="SyncProgress"/>
            </ProgressBar.Value>
          </ProgressBar>
        </ContentPresenter.Content>
      </ContentPresenter>

      <ContentPresenter Name="ErrorMessagePresenter" 
            Grid.Column="0" 
            Visibility="Collapsed" 
            VerticalAlignment="Center">
        <ContentPresenter.Content>
          <!-- Grid that displays the error message if a sync failed -->
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock VerticalAlignment="Center"
                       Grid.Row="0"
                       TextWrapping="Wrap"
                       Text="{Binding Source={x:Static SceReader:ServiceProvider.ViewManager}, Path=SyncErrorMessage}"
                       AutomationProperties.AutomationId="SyncError" />
          </Grid>
        </ContentPresenter.Content>
      </ContentPresenter>
      
      <!-- Create a button in the Right column that initially has the "Start Sync" style -->
      <scer:CommandButton Name="SyncButton"
              Content="{x:Null}"
              Style="{DynamicResource StartButtonStyle}"
              Grid.Column="1"
              Width="33" Height="33" Margin="5,0,0,0"
              HorizontalAlignment="Left" VerticalAlignment="Center"
              Cursor="Hand"
              AutomationProperties.AutomationId="Sync"
              AutomationProperties.Name="Sync">
        <SceReaderControls:CommandButton.Template>
          <ControlTemplate TargetType="{x:Type Button}">
            <Border Background="{TemplateBinding Background}" />
          </ControlTemplate>
        </SceReaderControls:CommandButton.Template>
      </scer:CommandButton>
    </Grid>

    <ControlTemplate.Triggers>
      <DataTrigger Binding="{Binding Source={x:Static SceReader:ServiceProvider.ViewManager}, Path=SyncState}"
               Value="NoSyncInProgress">
        <Setter TargetName="SyncButton"
                Property="Style"
                Value="{StaticResource StartButtonStyle}"/>
      </DataTrigger>

      <DataTrigger Binding="{Binding Source={x:Static SceReader:ServiceProvider.ViewManager}, Path=SyncState}"
               Value="SyncInProgress">
        <Setter TargetName="SyncButton"
                Property="Style"
                Value="{StaticResource StopButtonStyle}"/>
        <Setter TargetName="SyncProgressPresenter"
                Property="Visibility"
                Value="Visible"/>
        <Setter TargetName="LastUpdatedPresenter"
                Property="Visibility"
                Value="Collapsed"/>
        <Setter TargetName="ErrorMessagePresenter"
                Property="Visibility"
                Value="Collapsed"/>
        <Setter TargetName="SyncButton"
                Property="Command"
                Value="{Binding Source={x:Static SceReader:ServiceProvider.ViewManager}, Path=SyncCommands.StopSyncCommand}"/>
      </DataTrigger>

      <DataTrigger Binding="{Binding Source={x:Static SceReader:ServiceProvider.ViewManager}, Path=SyncState}"
               Value="SyncFailed">
        <Setter TargetName="SyncButton"
                Property="Style"
                Value="{StaticResource ErrorButtonStyle}"/>
        <Setter TargetName="LastUpdatedPresenter"
                Property="Visibility"
                Value="Visible"/>
        <Setter TargetName="SyncProgressPresenter"
                Property="Visibility"
                Value="Collapsed"/>
      </DataTrigger>

      <MultiTrigger>
        <MultiTrigger.Conditions>
          <Condition SourceName="SyncButton" Property="Style" Value="{StaticResource ErrorButtonStyle}"/>
          <Condition SourceName="SyncButton" Property="IsPressed" Value="True"/>
        </MultiTrigger.Conditions>
          <Setter TargetName="SyncButton"
                  Property="Style"
                  Value="{StaticResource StartButtonStyle}"/>
        
      </MultiTrigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>

  <!-- Style for the sync control. Sync control sets it's width and height because there is relayout when the template is updated after sync and it should not
  affect other UI components -->
  <Style x:Key="SyncControlStyle" TargetType="{x:Type Control}">
    <Setter Property="IsTabStop" Value="False"/>
    <Setter Property="Template" Value="{StaticResource SyncControlTemplate}"/>
  </Style>

</ResourceDictionary>