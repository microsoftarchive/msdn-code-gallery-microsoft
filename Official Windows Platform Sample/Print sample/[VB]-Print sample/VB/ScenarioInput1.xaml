<local:BasePrintPage
    x:Class="PrintSample.ScenarioInput1"    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="using:PrintSample"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid>
        <Canvas x:Name="_printingRoot" Opacity="0"/>
        <StackPanel Background="White">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" Text="Apps can choose to add print experience through Charms Bar via the print contract."/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="registerForPrintingButton" Content="Register" Margin="0,0,10,0" Click="RegisterForPrintingButtonClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</local:BasePrintPage>