      <Extensions>
        <Extension Category="windows.backgroundTasks" EntryPoint="MediaTransportControls.App">
          <BackgroundTasks>
            <Task Type="audio" />
          </BackgroundTasks>
        </Extension>
      </Extensions>
    </Application>
